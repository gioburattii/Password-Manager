rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
    // Regole per gli utenti e le loro password
    match /users/{userId} {
      // Permetti lettura e scrittura solo al proprietario
      allow read, write: if request.auth != null 
                       && request.auth.uid == userId;
      
      // Regole per le password dell'utente (sottocollezione)
      match /passwords/{passwordId} {
        // Permetti lettura e scrittura solo al proprietario
        allow read, write: if request.auth != null 
                         && request.auth.uid == userId;
      }
    }
    
    // Nega tutto il resto
    match /{document=**} {
      allow read, write: if false;
    }
  }
} 